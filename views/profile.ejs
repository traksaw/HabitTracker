<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Personal Habit Tracker</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Geologica:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="bg-light">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary">Daily Goal Tracker</h1>
    <a href="/logout" class="btn btn-outline-danger btn-sm"><i class="fas fa-sign-out-alt"></i> Logout</a>
</div>

    <div class="row g-4">

        <!-- LOCAL INFORMATION -->
        <div class="col-md-6">
            <div class="card shadow border-0">
                 <% if (user.local.email) { %>
                    <p>
                        
                        <strong>email</strong>: <span id="emailSection"><%= user.local.email %></span><br>
                        
                    </p>

                    <a href="/unlink/local" class="btn btn-outline-secondary btn-sm">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-outline-secondary btn-sm">Connect Local</a>
                <% } %>
                <h3 class="mt-4 text-primary">Quote of the Day</h3>
                        <blockquote class="blockquote">
                            <h5 id="quoteSection" class="mb-1"></h5>
                            <footer id="authorSection" class="blockquote-footer mt-4"></footer>
                        </blockquote>

                <!-- <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %> -->
                <button type="submit" id="apiBtn" class="btn btn-primary btn-sm me-2">Inspire me!</button>
                <button type="submit" id="pinnedQuoteBtn" class="btn btn-success btn-sm">Pin!</button>

            </div>
            <div div class="mt-4">
              <h4>Pinned Quote</h4>
                <p><%= user.pinnedQuote ? user.pinnedQuote : '' %></p>
                <% console.log(user) %>
            </div>
        </div>
        <div class="col-md-6">
          <h3 class="text-success">Goals: Daily Streaks</h3>
          <ul class="messages list-group list-group-flush mb-4">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message list-group-item d-flex justify-content-between align-items-center">
              <span class="goalName text-dark"><%= messages[i].goal %></span>
              <span class="catName text-muted"><%= messages[i].name %></span>
              <span class="badge bg-primary"><%= messages[i].streak %></span>
              <button class="btn btn-outline-success btn-sm streakBtn">Streak</button>
              <button class="btn btn-outline-danger btn-sm resetBtn">Reset</button>
              <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

          <h4>Add a New Goal</h4>
          <form action="/messages" method="POST" class="mt-3">
            <div class="mb-3">
              <input type="text" name="name" class="form-control" placeholder="Enter a new goal..." required>
          </div>
          <div class="mb-3">
            <select name="goal" class="form-select" required>
                <option value="Fitness">Fitness</option>
                <option value="Finance">Finance</option>
                <option value="Mindfulness">Mindfulness</option>
                <option value="Self-Care">Self-Care</option>
                <option value="Other">Other</option>
            </select>
        </div>
            
            <!-- <input type="text" placeholder="message" name="msg"> -->
            <button type="submit" class="btn btn-primary w-100">Submit</button>
          </form>
        </div>


</div>

<script src="main.js"></script>

</body>
</html>
